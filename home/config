;**********************************************************
;
;                  COLORS
;
;**********************************************************

[colors]
; Base colors from .Xresources
bg            =   ${xrdb:background}
fg            =   ${xrdb:foreground}
              
black         =   ${xrdb:color0}
red           =   ${xrdb:color1}
green         =   ${xrdb:color2}
yellow        =   ${xrdb:color3}
blue          =   ${xrdb:color4}
magenta       =   ${xrdb:color5}
cyan          =   ${xrdb:color6}
white         =   ${xrdb:color7}

brightblack   =   ${xrdb:color8}
brightred     =   ${xrdb:color9}
brightgreen   =   ${xrdb:color10}
brightyellow  =   ${xrdb:color11}
brightblue    =   ${xrdb:color12}
brightmagenta =   ${xrdb:color13}
brightcyan    =   ${xrdb:color14}
brightwhite   =   ${xrdb:color15}

;**********************************************************
;
;           GLOBAL WM SETTINGS
;
;**********************************************************

[global/wm]
margin-top = 0
margin-bottom = 0

;*********************************************************
;
;           BAR SETTINGS
;
;********************************************************

[bar/top]
wm-restack = bspwm
height = 15
offset-x = 15
offset-y = 10

background = ${colors.bg}
foreground = ${colors.green}

border-size = 1
border-color = ${colors.fg}

padding = 2
module-margin = 10

font-0 = Iosevka Nerd Font Mono:style=Medium,Regular:pixelsize=12:antialias=true;3
font-1 = Noto:size=12;3

modules-left = bspwm
modules-center = 
modules-right = date

tray-position = center
tray-padding = 1

[bar/DP-1]
inherit = bar/top
monitor = DP-1
width = 1650

[bar/DVI-I-1]
inherit = bar/top
monitor = DVI-I-1
width = 1250

[bar/DVI-D-1]
inherit = bar/top
monitor = DVI-D-1
width = 1250

;**********************************************************
;
;                   MODULES SETTINGS
;
;**********************************************************

[module/bspwm]
type = internal/bspwm

; Only show workspaces defined on the same output as the bar
; NOTE: The bspwm and XRandR monitor names must match, which they do by default.
; Default: true
pin-workspaces = true

; Output mode flags after focused state label
; Default: false
inline-mode = false

; Create click handler used to focus workspace
; Default: true
enable-click = true

; Create scroll handlers used to cycle workspaces
; Default: true
enable-scroll = false

; Set the scroll cycle direction
; Default: true
reverse-scroll = false

; Use fuzzy (partial) matching on labels when assigning
; icons to workspaces
; Example: code;â™š will apply the icon to all workspaces
; containing 'code' in the
; label
; Default: false
fuzzy-match = true

label-occupied = %icon% %name%

label-focused-padding = 2
label-focused-margin = 0.5
label-focused-foreground = ${colors.brightgreen}
label-focused-background = ${colors.black}
label-focused-underline = ${colors.red}

label-unfocused-padding = 2
label-unfocused-margin = 0.5
label-visible-padding = 2
label-visible-margin = 0.5

label-empty-foreground = ${colors.brightblack}

[module/date]
type = internal/date
interval = 1

date = %Y-%m-%d  KW %V
time = %H:%M

label = %date% | %time%

; vim:ft=dosini
